<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Staatliches&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css"
    />
    <!-- <link
      rel="stylesheet"
      href="https://unpkg.com/esri-leaflet-geocoder@3.1.6/dist/esri-leaflet-geocoder.css"
    /> -->
    <link rel="stylesheet" href="/css/trix.css" />
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/app.css" />
    <title>Meeti - <%- pagina %></title>
  </head>
  <body>
    <header class="site-header contenedor">
      <a href="/">
        <img src="/img/logo.png" alt="Logo" />
      </a>
      <nav class="nav">
        <% if(locals.usuario.id) { %> <%-
        include('partials/nav-autenticado.ejs') %> <% } else { %> <%-
        include('partials/nav-no-autenticado.ejs') %> <% } %>
      </nav>
    </header>

    <% if(locals.mensajes) { %> <% const categoria =
    Object.keys(locals.mensajes) %> <% if(categoria.length) { %> <%
    locals.mensajes[categoria].forEach(alerta=>{ %>
    <div class="alertas">
      <p class="alerta <%= categoria%>"><%= alerta %></p>
    </div>
    <% }) %> <% } %> <% } %> <%- body %>

    <foooter class="site-footer contenedor">
      <nav class="nav">
        <% if(locals.usuario.id) { %> <%-
        include('partials/nav-autenticado.ejs') %> <% } else { %> <%-
        include('partials/nav-no-autenticado.ejs') %> <% } %>
      </nav>
      <p class="copyright">
        Todos los derechos reservados Meeti <%- year %> &copy;
      </p>
    </foooter>

    <script src="/js/trix.js"></script>
    <script src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js"></script>
    <script src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js"></script>
    <script src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js"></script>
    <script src="/dist/bundle.js"></script>
  </body>
</html>
