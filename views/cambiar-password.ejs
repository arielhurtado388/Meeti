<main class="contenedor contenedor-formularios no-padding">
  <h1><%- pagina %></h1>

  <form class="default-form" action="/cambiar-password" method="POST">
    <div class="campo">
      <label>Contraseña anterior</label>
      <input type="password" name="anterior" placeholder="Contraseña actual" />
    </div>
    <div class="campo">
      <label>Contraseña nueva</label>
      <input type="password" name="nuevo" placeholder="Contraseña nueva" />
    </div>
    <div class="campo enviar">
      <input type="submit" class="btn btn-rosa" value="Cambiar contraseña" />
    </div>
  </form>
</main>
