<main class="contenedor contenedor-formularios no-padding">
  <h1><%= pagina %></h1>
  <form method="POST" class="default-form" novalidate>
    <div class="campo">
      <label>Nombre</label>
      <input
        type="text"
        name="nombre"
        placeholder="Nombre del grupo"
        value="<%= grupo.nombre  %>"
      />
    </div>

    <div class="campo descripcion">
      <label for="">Descripción</label>
      <div class="contenedor-editor">
        <input
          type="hidden"
          id="x"
          name="descripcion"
          value="<%= grupo.descripcion  %>"
        />
        <trix-editor input="x"></trix-editor>
      </div>
    </div>

    <div class="campo">
      <label>Categoría</label>
      <select name="categoria">
        <option value="" selected disabled>-- Elige una categoría --</option>
        <% categorias.forEach(categoria=> {%>
        <option value="<%= categoria.id %>"
        <%= (grupo.categoriaId === categoria.id) ? "selected" : ""  %>    
        ><%= categoria.nombre %></option>
        <% }) %>
      </select>
    </div>

    <div class="campo">
      <label>Sitio web</label>
      <input
        type="url"
        name="url"
        placeholder="Sitio web"
        value="<%= grupo.url  %>"
      />
    </div>

    <div class="campo enviar">
      <input class="btn btn-rosa" type="submit" value="Guardar cambios" />
    </div>
  </form>
</main>
